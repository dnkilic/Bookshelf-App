<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <item android:state_focused="true">

        <shape android:shape="rectangle">

            <stroke android:width="@dimen/normal_border"
                    android:color="@color/nobel"/>
            <solid android:color="@color/white_smoke"/>
            <corners android:radius="@dimen/et_add_book_radius"/>
            <padding android:bottom="@dimen/et_add_book_padding"
                     android:left="@dimen/et_add_book_padding"
                     android:right="@dimen/et_add_book_padding"
                     android:top="@dimen/et_add_book_padding"/>
        </shape>

    </item>


    <item android:state_focused="false">

        <shape android:shape="rectangle">

            <stroke android:width="@dimen/normal_border" android:color="@color/whisper"/>
            <solid android:color="@color/white_smoke"/>
            <corners android:radius="@dimen/et_add_book_radius"/>
            <padding android:bottom="@dimen/et_add_book_padding"
                     android:left="@dimen/et_add_book_padding"
                     android:right="@dimen/et_add_book_padding"
                     android:top="@dimen/et_add_book_padding"/>
        </shape>

    </item>


</selector>